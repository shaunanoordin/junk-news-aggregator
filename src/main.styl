/*  App Theme
 */
//------------------------------------------------------------------------------
$black = #333
$white = #fff
$oxford-blue = #002147
$blue-highlight = #3cf
$red = #c33
$oxford-red = #aa2a2a
$grey-mid = #ccc
$grey-dark = #999

$mobile-width = 800px
//------------------------------------------------------------------------------

/*  Basic Styles
 */
//------------------------------------------------------------------------------
*
  box-sizing: border-box

:root
  font-family: "Roboto", sans-serif
  font-size: 16px
  background: $white url("./assets/simple-bg.png")
  color: $black

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

a
  color: inherit
  text-decoration: none

select
  font-family: inherit
  font-size: inherit

//------------------------------------------------------------------------------

/* App Style: Main Layout
 */
//------------------------------------------------------------------------------
#app
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  max-width: 50rem
  margin: 0 auto
  background: $white

#app > header
  flex: 0 0 auto

  .header
    display: flex
    flex-direction: row
    align-items: flex-end
    
    a.logo
      display: block
      flex: 0 0 auto
      margin: 0.5em
      
      img
        display: block
        width: 110px
      
    a.title
      display: block
      flex: 1 1 auto
      margin: 0.5em
      color: $oxford-blue
      display: block
  
    h1
      font-size: 1.25em
      margin: 0
      padding: 0.5em
      line-height: 80px
  
  nav
    background: $oxford-blue
    color: $white
    font-size: 0.75em
    text-transform: uppercase
    
    a
      display: block
      
    a:hover
      background: $blue-highlight
    
    ul
      display: flex
      flex-direction: row
      justify-content: center
      list-style: none
      margin: 0
      padding: 0
      
      @media (max-width: $mobile-width)
        flex-direction: column
      
      li
        flex: 0 0 auto
        margin: 0
        min-width: 8em
        line-height: 3em
        padding: 0
        text-align: center

#app > footer
  flex: 0 0 auto
  background: $oxford-blue
  color: $white
  font-size: 0.8em
  padding: 0.1em 0.5em
  text-align: right
  
#app > main
  background: $white
  flex: 1 0 auto  //Due to the increased amount of text on the main app (description + footer), the main section should now expand to fit the content.
  
#app.top10-app > main
  flex: 1 1 auto

//------------------------------------------------------------------------------

/*  Page Style: Home Page (List-type)
 */
//------------------------------------------------------------------------------
#app > main.home-page
#app > main.archive-page
  display: flex
  flex-direction: column
  
  .description-panel
    font-size: 0.8em
    padding: 0.5em 1em
    
    a
      color: $oxford-red
  
  .filter-panel
    background: $grey-mid
    font-size: 0.8em
        
    .row
      display: flex
      flex: 0 0 auto
      flex-direction: row
      justify-content: center
      padding: 0.25em 1em

      @media (max-width: $mobile-width)
        flex-direction: column
      
      > span
        flex: 0 0 auto
        line-height: 2em
      
      > input
      > button
      > select
        flex: 0 0 auto
        margin: 0 0.5em

        @media (max-width: $mobile-width)
          min-height: 2.5em
          margin: 0

  .sort-panel
    color: $grey-dark
    font-size: 0.8em
    
    .row
      display: flex
      flex: 0 0 auto
      flex-direction: row
      flex-wrap: wrap
      justify-content: flex-end
      padding: 0.25em 1em
      
      > label
        flex: 1 1 auto
        display: inline-block
        padding: 0.5em
        line-height: 1em

      > span
        display: inline-block
        
        @media (max-width: $mobile-width)
          display: flex
          justify-content: center
          flex-wrap: wrap

        a.sort-button
          display: inline-block
          padding: 0.5em
          line-height: 1em
          border-right: 1px solid $grey-dark
          text-align: center
          width: 3em
          
        a.large.sort-button
          width: 6.25em

        a.sort-button:last-child
          border-right: none
  
  .list
    box-shadow: inset 0 -0.2em 1em $grey-dark
    flex: 1 1 auto
    list-style: none
    margin: 0
    overflow: auto
    padding: 0
    
    .info
      background: $oxford-blue
      color: $white
      padding: 2em
      text-align: center
      
      &.error
        background: $red
    
    .item
      align-items: flex-start
      border: 1px solid $oxford-blue
      display: flex
      margin: 0.5em
      overflow: auto
      
      .left
        display: block
        flex: 0 0 auto
        width: 10em
        margin: 0.5em
        
        .photo
          background: $grey-dark
          width: 100%

          img
            width: 100%
            display: block
        
        .links
          display: flex
          flex-direction: row
          align-items: center
        
          .link-facebook
            display: inline-block
            padding: 0.25em

            img
              width: 1em
              display: block

          .link-website
            display: inline-block
            font-size: 1em
            padding: 0.25em
          
      .right
        color: $black
        flex: 1 1 auto
        margin: 0.5em
        
        .header
          align-items: center
          display: flex
          margin-bottom: 1em
          
          .publisher
            flex: 1 1 auto
            font-size: 1.1em
            font-weight: bold
            
          .time
            color: $grey-dark
            cursor: pointer
            flex: 0 0 auto
            font-size: 0.8em
        
        .message
          line-height: 1.5em
          margin-bottom: 1em
          
        .reactions
          
          .row
            display: flex
            flex-wrap: wrap
            font-size: 0.65em
            justify-content: flex-end
            line-height: 2em
          
            label
              color: $grey-mid
              margin: 0.25em 0.5em

            .reaction
              flex: 0 0 auto
              margin: 0.25em 0.5em
              cursor: help
              min-width: 4em

              .key
                color: $grey-mid
                margin: 0 0.05em

              .value
                color: $grey-dark
                margin: 0 0.05em
    
//------------------------------------------------------------------------------

/*  Page Style: About Page, Contact Page (Info-type)
 */
//------------------------------------------------------------------------------
#app > main.about-page
#app > main.contact-page
  padding: 1em 2em
  
  a
    color: $oxford-blue
    
    &:hover
      color: $blue-highlight

//------------------------------------------------------------------------------
